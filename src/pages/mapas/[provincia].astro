---
import Layout from '../../layouts/Layout.astro';
import MapaLeaflet from '../../components/MapaLeaflet.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const provincias = [
    { slug: 'guanacaste', name: 'Guanacaste', coords: [10.4274, -85.4527], zoom: 9 },
    { slug: 'puntarenas', name: 'Puntarenas', coords: [9.4297, -84.1632], zoom: 9 },
    { slug: 'limon', name: 'Limón', coords: [9.9907, -83.0359], zoom: 9 },
  ];

  return provincias.map(prov => ({
    params: { provincia: prov.slug },
    props: { ...prov },
  }));
}

const { name, coords, zoom } = Astro.props;
const { provincia } = Astro.params;

// Get playas for this province
const allPlayas = await getCollection('playas');
const playasProvincia = allPlayas.filter(playa => playa.data.provincia === provincia);

const visitedCount = playasProvincia.filter(p => p.data.visitada).length;
const totalCount = playasProvincia.length;
const progress = totalCount > 0 ? Math.round((visitedCount / totalCount) * 100) : 0;
---

<Layout title={`Playas de ${name} | Reto Playas CR`}>
  <div class="bg-sand-light min-h-screen">
    <!-- Header / Breadcrumb -->
    <div class="bg-ocean-deep text-white pt-24 pb-12">
      <div class="container mx-auto px-4">
        <div class="flex items-center text-sm font-body text-ocean-foam mb-4">
          <a href="/" class="hover:text-white">Inicio</a>
          <span class="mx-2">/</span>
          <a href="/mapas" class="hover:text-white">Mapas</a>
          <span class="mx-2">/</span>
          <span class="text-white">{name}</span>
        </div>
        
        <div class="flex flex-col md:flex-row justify-between items-end">
          <div>
            <h1 class="font-display text-5xl md:text-7xl mb-2">{name}</h1>
            <p class="font-body text-xl opacity-90">Explorando la costa dorada</p>
          </div>
          
          <div class="mt-6 md:mt-0 text-right">
            <div class="font-display text-4xl text-sunset-gold">{visitedCount} / {totalCount}</div>
            <div class="text-sm uppercase tracking-widest">Playas Visitadas</div>
            <!-- Progress Bar -->
            <div class="w-48 h-2 bg-white/20 rounded-full mt-2 ml-auto">
              <div class="h-full bg-sunset-coral rounded-full" style={`width: ${progress}%`}></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4 -mt-8 mb-16 relative z-10">
      <!-- MAPA -->
      <MapaLeaflet 
        center={coords} 
        zoom={zoom} 
        playas={playasProvincia} 
        containerId={`map-${provincia}`}
      />
    </div>

    <!-- LISTADO DE PLAYAS -->
    <div class="container mx-auto px-4 pb-20">
      <h2 class="font-display text-3xl text-ocean-deep mb-8 border-b-2 border-ocean-mid/20 pb-2 inline-block">
        Listado de Playas ({totalCount})
      </h2>

      {playasProvincia.length === 0 ? (
        <div class="text-center py-12 text-text-secondary">
          <p class="text-xl">Aún no hay playas documentadas en esta provincia.</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {playasProvincia.map(playa => (
            <article class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow overflow-hidden border border-sand-warm">
              <div class="relative h-48">
                <img 
                  src={playa.data.image} 
                  alt={playa.data.title} 
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class={`absolute top-4 right-4 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider ${playa.data.visitada ? 'bg-green-500 text-white' : 'bg-orange-400 text-white'}`}>
                  {playa.data.visitada ? 'Visitada' : 'Pendiente'}
                </div>
              </div>
              
              <div class="p-6">
                <h3 class="font-display text-2xl text-ocean-deep mb-2">{playa.data.title}</h3>
                <p class="font-body text-text-secondary text-sm mb-4 line-clamp-2">
                  {playa.data.description}
                </p>
                
                <div class="flex justify-between items-center mt-4 pt-4 border-t border-gray-100">
                  <span class="text-xs text-gray-400 font-body">
                    {playa.data.date ? new Date(playa.data.date).toLocaleDateString() : 'Sin fecha'}
                  </span>
                  {playa.data.link && (
                    <a href={playa.data.link} target="_blank" class="text-sunset-coral font-bold text-sm hover:text-sunset-gold transition-colors">
                      Ver en IG &rarr;
                    </a>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </div>
</Layout>

